{
    "name": "@factoshi/proto-peg",
    "version": "0.1.1",
    "description": "Library and CLI for serialisation and deserialisation of PegNet SPRs and OPRs.",
    "homepage": "https://github.com/Factoshi/proto-peg",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "protopeg": "dist/cli.js"
    },
    "scripts": {
        "test": "mocha -r ts-node/register \"test/**/*.spec.ts\"",
        "test:watch": "nodemon -e ts -w ./src -x npm run test",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepare": "npm run build",
        "prepublishOnly": "npm test",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "pegnet",
        "pegnetd",
        "opr",
        "spr",
        "encode",
        "decode"
    ],
    "author": "afenrir",
    "license": "MIT",
    "files": [
        "dist/**/*",
        "*.proto"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^10.0.0",
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.6.0",
        "chai": "^4.2.0",
        "husky": "^4.2.5",
        "mocha": "^8.1.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "axios": "^0.20.0",
        "commander": "^6.0.0",
        "long": "^4.0.0",
        "protobufjs": "^6.10.1"
    }
}

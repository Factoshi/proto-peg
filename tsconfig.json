{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noErrorTruncation": false,
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "test"]
}
